<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:background="#f0e68c"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:background="#f0f0f0"
            android:id="@+id/layout3">
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="7dp"
                android:background="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CANDIDATE DETAILS"
                android:textSize="25dp"
                android:background="#fff000"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:id="@+id/admin_edit_candidate_candidate_details"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="#000000"/>



            <EditText
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/textbox"
                android:textStyle="italic|bold"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:id="@+id/admin_edit_candidate_candidate_name"
                android:hint="Candidate Name"
                />

            <EditText
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/textbox"
                android:textStyle="italic|bold"
                android:paddingTop="5dp"
                android:padding="5dp"
                android:id="@+id/admin_edit_candidate_candidate_party"
                android:hint="Candidate Party Name"
                />



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/layout3"
            android:id="@+id/layout4">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="4.5dp"
                android:text="SAVE DETAILS"
                android:textSize="20dp"
                android:background="@drawable/button2"
                android:layout_weight="1"
                android:id="@+id/admin_edit_candidate_save"
                android:onClick="ClickedButton"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/layout4"
            android:id="@+id/layout5">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="4.5dp"
                android:text="EXIT"
                android:textSize="20dp"
                android:background="@drawable/button4"
                android:layout_weight="1"
                android:id="@+id/admin_edit_candidate_exit"
                android:onClick="ClickedButton"/>

        </LinearLayout>



    </RelativeLayout>
</ScrollView>